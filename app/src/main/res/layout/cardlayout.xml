<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/kisiImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/profil" />

    <TextView
        android:id="@+id/isimText"
        android:layout_width="336dp"
        android:layout_height="33dp"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/kisiImage"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/durumText"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isimText"

        android:layout_alignBottom="@+id/kisiImage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/kisiImage"
        android:text="TextView"
        android:textAlignment="center"
        />
</RelativeLayout>